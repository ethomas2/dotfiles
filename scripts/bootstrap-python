#!/bin/bash
set -euxo pipefail

[ -d venv ] || ~/.pyenv/versions/3.9.1/bin/python -m venv venv

if [ ! -f .envrc ] || [ -z `grep "source venv/bin/activate" .envrc` ]; then
  echo "source venv/bin/activate" >> .envrc
  direnv allow
fi

source venv/bin/activate
pip install flake8
pip install mypy
pip install black
pip install jedi
pip install neovim

if [ ! -f pyproject.toml ] || [ -z `grep tool.black pyproject.toml` ]; then
  cat <<EOF >> pyproject.toml
[tool.black]
line-length = 79
EOF
fi
