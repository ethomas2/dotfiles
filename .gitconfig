[user]
	email = evan@tempoautomation.com
	name = Evan Thomas

[diff]
	tool = nvimdiff

[merge]
	tool = nvimdiff


[mergetool "nvimdiff"]
        cmd = nvim -d $REMOTE $BASE $LOCAL $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool "nvimdiff"]
        cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""


[diff "ansible-vault"]
    textconv = ansible-vault view
    cachetextconv = true

[core]
    editor = nvim
	excludesfile = /Users/ethomas/.gitignore

[alias]
  ch = checkout
  cho = checkout
  com = commit
  br = branch
  f = fetch
  pu = push
  dt = difftool
  d = diff
  mt = mergetool
  cp = cherry-pick
